{
  "name": "kaizoku",
  "version": "1.0.0",
  "author": "Alperen Elhan <alperen@elhan.io>",
  "private": true,
  "scripts": {
    "dev:server": "NODE_ENV=development ts-node --project tsconfig.server.json src/server/index.ts",
    "build:server": "tsc --project tsconfig.server.json",
    "start:server": "NODE_ENV=production node dist/server/index.js",
    "prod": "prisma migrate deploy && yarn run start:server",
    "dev": "next dev",
    "build:next": "next build",
    "build": "yarn run build:next && yarn run build:server",
    "build:analyze": "ANALYZE=true yarn run build:next && ANALYZE=false yarn run build:server",
    "lint": "next lint",
    "start": "next start",
    "postinstall": "prisma generate"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@bull-board/api": "^4.6.0",
    "@bull-board/express": "^4.6.0",
    "@emotion/react": "^11.10.4",
    "@emotion/server": "^11.10.0",
    "@mantine/core": "^5.5.6",
    "@mantine/form": "^5.5.6",
    "@mantine/hooks": "^5.5.6",
    "@mantine/modals": "^5.5.6",
    "@mantine/next": "^5.5.6",
    "@mantine/notifications": "^5.5.6",
    "@mantine/nprogress": "^5.5.6",
    "@mantine/spotlight": "^5.5.6",
    "@next/bundle-analyzer": "^12.3.1",
    "@prisma/client": "4.5.0",
    "@tabler/icons": "^1.106.0",
    "@tanstack/react-query": "^4.12.0",
    "@trpc/client": "^10.0.0-proxy-beta.23",
    "@trpc/next": "^10.0.0-proxy-beta.23",
    "@trpc/react": "^10.0.0-proxy-beta.13",
    "@trpc/react-query": "^10.0.0-proxy-beta.23",
    "@trpc/server": "^10.0.0-proxy-beta.23",
    "bullmq": "^2.3.2",
    "contrast-color": "^1.0.1",
    "dayjs": "^1.11.5",
    "execa": "5.1.1",
    "express": "^4.18.2",
    "framer-motion": "^7.6.1",
    "mantine-datatable": "^1.7.9",
    "moment": "^2.29.4",
    "next": "12.3.1",
    "node-telegram-bot-api": "^0.59.0",
    "pino": "^8.6.1",
    "pino-pretty": "^9.1.1",
    "pretty-bytes": "5.6.0",
    "prop-types": "^15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sharp": "^0.31.1",
    "string-to-color": "^2.2.2",
    "superjson": "^1.10.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/contrast-color": "^1.0.0",
    "@types/express": "^4.17.14",
    "@types/node": "18.11.2",
    "@types/node-telegram-bot-api": "^0.57.5",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/react-no-ssr": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "autoprefixer": "^10.4.12",
    "eslint": "8.25.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
